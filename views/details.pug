extends layout

block content

  //- Loop Over Posts
  div(class="card mx-auto mt-5" style="width: 350px;")
    div(class="card-body p-3")
      h1= post.title
      p= post.body
      p= post.author
      p= post.id
    
      form(method="DELETE" action="/")
        button(type="submit" class="btn btn-danger") Delete 
